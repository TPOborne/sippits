{% extends '../includes/layout.twig' %}

{% set pageType = 'home' %}
{% set pageTitle = 'Sippits' %}

{% block head %}
{% endblock head %}

{% block body %}

	<div class="contents">
			<div class="loginContainer">
				<h2>Sippits</h2>
				<form>
					<div class="form-group">
						<label for="gameCode">Game Code</label>
						<input type="text" class="form-control" id="gameCode" placeholder="ABC">
					</div>
					<div class="form-group">
						<label for="name">Name</label>
						<input type="text" class="form-control" id="name">
					</div>

					<button type="submit" class="btn btn-primary" id="joinGame">Join</button>
					<button type="submit" class="btn btn-primary" id="createGame">Create</button>

				</form>
			</div>
			<div class="waitingRoom">
				<h2 class="title"></h2>
				<ul class="players list-group">

				</ul>

				<button type="submit" class="btn btn-secondary btn-block" id="startGame">Start</button>
			</div>

			<div class="nightMode">
				<h2 class="title"></h2>

				<button type="submit" class="btn btn-secondary btn-block" id="enterDay">Enter Day</button>
			</div>

			<div class="dayMode">
				<h2 class="title"></h2>

				<button type="submit" class="btn btn-secondary btn-block" id="enterNight">Enter Night</button>
			</div>
	</div>

{% endblock body %}

{% block scripts %}
	{{ super() }}
	<script type="text/javascript" src='/scripts/home.js'></script>
{% endblock scripts %}


